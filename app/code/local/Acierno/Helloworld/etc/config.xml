<?xml version="1.0" encoding="UTF-8" ?>
<config>
    <modules>
        <Acierno_Helloworld>
            <version>0.1.0</version>
        </Acierno_Helloworld>
    </modules>
    <global>
        <helpers>
            <acierno_helloworld>
                <class>Acierno_Helloworld_Helper</class>
            </acierno_helloworld>
        </helpers>
        <blocks>
            <acierno_helloworld>
                <class>Acierno_Helloworld_Block</class>
            </acierno_helloworld>
        </blocks>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <acierno_helloworld>
                    <files>
                        <default>Acierno_Helloworld.csv</default>
                    </files>
                </acierno_helloworld>
            </modules>
        </translate>
    </adminhtml>
    <frontend>
        <routers>
            <helloworld>
                <use>standard</use>
                <args>
                    <module>Acierno_Helloworld</module>
                    <frontName>helloworld</frontName>
                </args>
            </helloworld>
        </routers>
        <layout>
            <updates>
                <acierno_helloworld>
                     <file>acierno_helloworld.xml</file>
                </acierno_helloworld>
            </updates>
        </layout>
        <translate>
            <modules>
                <acierno_helloworld>
                    <files>
                        <default>Acierno_Helloworld.csv</default>
                    </files>
                </acierno_helloworld>
            </modules>
        </translate>
    </frontend>
    <default>
        <acierno_helloworld>
            <configuration>
                <enabled>0</enabled>
                <message>Welcome...what are you buying? What are you selling?</message>
            </configuration>
        </acierno_helloworld>
    </default>
</config>